---
const currentPath = Astro.url.pathname;
const isHome = currentPath === "/" || currentPath === "";
---

<header class="sticky top-0 z-40 w-full backdrop-blur gradient-mask-b-0 pb-4">
  <div class="mx-auto max-w-5xl px-6 h-20 flex items-center justify-between">
    <a href="/" class="no-underline decoration-transparent hover:decoration-transparent flex items-center gap-3">
      <img src="/favicon.png" alt="claustre" class="w-7 h-7 rounded" />
      <span class="text-primary font-medium text-lg tracking-tight">claustre</span>
    </a>
    <nav class="flex items-center gap-6 text-sm">
      <a
        href="/getting-started"
        class:list={["no-underline hover:text-primary transition-colors", currentPath.includes("getting-started") ? "text-primary" : "text-secondary"]}
      >
        Docs
      </a>
      <a
        href="https://github.com/pmbrull/claustre"
        class="no-underline text-secondary hover:text-primary transition-colors"
        target="_blank"
        rel="noopener"
      >
        GitHub
      </a>
    </nav>
  </div>
</header>
